<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <include layout="@layout/include_title"/>
    <TextView
        android:id="@+id/username_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名: "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="50dp"
        android:textSize="15sp"
        android:textColor="@android:color/black"/>
    <EditText
        android:id="@+id/username_et"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/username_tv"
        app:layout_constraintLeft_toRightOf="@+id/username_tv"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="50dp"
        android:background="@android:color/white"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:hint="请输入用户名"/>
    <View
        android:id="@+id/line_v"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        app:layout_constraintTop_toBottomOf="@+id/username_tv"
        app:layout_constraintLeft_toLeftOf="@+id/username_tv"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/E9"/>
    <TextView
        android:id="@+id/pw_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密  码: "
        app:layout_constraintLeft_toLeftOf="@+id/username_tv"
        app:layout_constraintTop_toBottomOf="@+id/line_v"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="15sp"
        android:textColor="@android:color/black"/>
    <EditText
        android:id="@+id/pw_et"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/pw_tv"
        app:layout_constraintLeft_toRightOf="@+id/pw_tv"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="50dp"
        android:background="@android:color/white"
        android:singleLine="true"
        android:ellipsize="end"
        android:inputType="textPassword"
        android:textColor="@android:color/black"
        android:textSize="15sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        app:layout_constraintTop_toBottomOf="@+id/pw_tv"
        app:layout_constraintLeft_toLeftOf="@+id/username_tv"
        android:layout_marginLeft="50dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="50dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/E9"/>
    <TextView
        android:id="@+id/login_tv"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:textSize="15sp"
        android:text="登录"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_solid_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pw_tv"
        android:layout_marginTop="@dimen/dp_60"/>
    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/login_tv"
        android:layout_marginTop="@dimen/dp_40"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/zhiwen"/>
    <TextView
        android:id="@+id/key_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@android:color/holo_red_light"
        app:layout_constraintTop_toBottomOf="@+id/icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_20"/>
</android.support.constraint.ConstraintLayout>
