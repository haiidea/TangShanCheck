<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@android:color/white"
android:orientation="vertical">

   <include layout="@layout/include_title"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@drawable/bg"
       android:paddingRight="@dimen/dp_20"
       android:paddingLeft="@dimen/dp_20"
       android:orientation="vertical">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/dp_150"
          android:padding="@dimen/dp_10">
         <TextView
             android:id="@+id/person_tv"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="被测评人"
             android:textColor="@android:color/black"
             android:textSize="@dimen/text_size_15"/>
         <TextView
             android:id="@+id/person_answer_tv"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:drawableRight="@drawable/arrow_right"
             android:drawablePadding="@dimen/dp_5"
             android:text="杨治"
             android:textColor="@color/green"
             android:textSize="@dimen/text_size_15"/>
      </RelativeLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="@dimen/dp_0.5"
          android:background="@color/green"/>
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="@dimen/dp_10">
         <TextView
             android:id="@+id/qst_tv"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="测评题目"
             android:textColor="@android:color/black"
             android:textSize="@dimen/text_size_15"/>
         <TextView
             android:id="@+id/qst_answer_tv"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toLeftOf="@+id/qst_answer_unin_tv"
             android:paddingRight="@dimen/dp_5"
             android:text="0"
             android:textColor="@color/green"
             android:textSize="@dimen/text_size_15"/>
         <TextView
             android:id="@+id/qst_answer_unin_tv"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:text="道"
             android:textColor="@android:color/black"
             android:textSize="@dimen/text_size_15"/>
      </RelativeLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="@dimen/dp_0.5"
          android:background="@color/green"/>
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="@dimen/dp_10">
         <TextView
             android:id="@+id/time_tv"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="测评时间"
             android:textColor="@android:color/black"
             android:textSize="@dimen/text_size_15"/>
         <TextView
             android:id="@+id/time_answer_tv"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toLeftOf="@+id/time_answer_unin_tv"
             android:paddingRight="@dimen/dp_5"
             android:text="0"
             android:inputType="number"
             android:textColor="@color/green"
             android:textSize="@dimen/text_size_15"/>
         <TextView
             android:id="@+id/time_answer_unin_tv"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:text="分钟"
             android:textColor="@android:color/black"
             android:textSize="@dimen/text_size_15"/>
      </RelativeLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="@dimen/dp_0.5"
          android:background="@color/green"/>
      <TextView
          android:id="@+id/start_tv"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="@dimen/dp_15"
          android:paddingBottom="@dimen/dp_15"
          android:layout_marginTop="@dimen/dp_120"
          android:background="@drawable/bg_solid_10"
          android:gravity="center"
          android:text="开始测评"
          android:textSize="@dimen/text_size_15"
          android:textColor="@android:color/white"/>
   </LinearLayout>
</LinearLayout>
